{
  "include": ["src/**/*"],
  "compilerOptions": {
    "declaration": true,
    "lib": ["ES2022"],
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src/",
    "types": ["node", "jest"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
