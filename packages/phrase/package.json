{
  "name": "@documente/phrase",
  "version": "1.0.0-beta.15",
  "description": "A fluent automated testing library for web applications",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/documente/phrase.git"
  },
  "author": "pckerneis <pc.kerneis@gmail.com>",
  "license": "GPL-3.0",
  "module": "./dist/main.mjs",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --coverage",
    "test-watch": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "lint": "npx eslint **/*.ts",
    "pretty": "npx prettier . --write",
    "build": "tsup src/main.ts --format cjs,esm --dts --clean",
    "watch": "npm run build -- --watch src",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/eslint-parser": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.54.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
}
